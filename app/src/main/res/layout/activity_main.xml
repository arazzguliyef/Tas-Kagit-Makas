<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/youText"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="50sp"
            android:layout_marginStart="20dp"
            android:text="@string/you"
            android:textSize="35sp"
            android:layout_marginRight="50sp"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/aiText"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:text="@string/me"
            android:textSize="35sp"
            android:layout_marginLeft="50dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/Resim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/kagit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/buton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        android:text="@string/basla"
        android:textSize="35sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/benim_tas"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:src="@drawable/tas"
            android:layout_gravity="start"
            android:onClick="SecilenTas"/>
        <ImageView
            android:id="@+id/benim_kagit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/kagit"
            android:layout_gravity="center_horizontal"
            android:onClick="SecilenKagit"/>

        <ImageView
            android:id="@+id/benim_makas"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:src="@drawable/makas"
            android:layout_gravity="end"
            android:onClick="SecilenMakas"/>

    </LinearLayout>

</LinearLayout>